<Page x:Class="AGS_Tim.windows.Highscore"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AGS_Tim.windows"
      mc:Ignorable="d" 
    
      d:DesignHeight="720"
      d:DesignWidth="1280"
      Title="Menu"
      
      Background="White">

    <Grid>
        <Border Grid.Row="2"
            BorderBrush="RoyalBlue"
            BorderThickness="2">
            <Image
                Stretch="None"
                Source="/AGS_Tim;component/Resources/tafel.jpg"
                >
            </Image>
        </Border>

        <DataGrid
            Name="DgHighscore"
            Margin="255,84,255,265"
            FontSize="30"
            HorizontalContentAlignment="Stretch"
            HorizontalAlignment="Stretch"
            ColumnWidth="*"
            Background="Transparent"
            BorderThickness="0">
        </DataGrid>
    </Grid>
</Page>